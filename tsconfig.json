{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"incremental": true,
		"noEmitOnError": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitAny": true,
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "Node",
		"lib": ["ES6"],
		"module": "commonjs",
		"target": "ES6",
		"declaration": true
	},
	"compileOnSave": true,
	"include": ["src/**/*.ts"]
}
